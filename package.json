{
  "name": "@bcgov/nrdk",
  "description": "NR Developer/Deployment Kit",
  "version": "0.1.0-rc.40",
  "author": "Clecio Varjao",
  "bin": {
    "nrdk": "./bin/run"
  },
  "bugs": "https://github.com/bcdevops/nrdk/issues",
  "dependencies": {
    "@bcgov/nr-pipeline-ext": "0.1.0-rc.9",
    "@bcgov/pipeline-cli": "^1.0.1-2",
    "@oclif/command": "^1.8.0",
    "@oclif/plugin-help": "^3.2.0",
    "@types/rsync": "^0.4.30",
    "isomorphic-git": "^1.7.6",
    "lodash.merge": "^4.6.2",
    "rsync": "^0.6.1",
    "safe-buffer": "^5.2.1",
    "shelljs": "^0.8.4",
    "tar": "^6.0.5",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/test": "^1",
    "@types/chai": "^4.2.12",
    "@types/lodash.merge": "^4.6.6",
    "@types/mocha": "^5",
    "@types/node": "^10.17.30",
    "@zeit/ncc": "^0.22.3",
    "chai": "^4",
    "eslint": "^5.13",
    "eslint-config-oclif": "^3.1",
    "eslint-config-oclif-typescript": "^0.1",
    "expect": "^26.4.2",
    "globby": "^10",
    "jest-snapshot": "^26.4.2",
    "mocha": "^7.2.0",
    "nock": "^13.0.4",
    "nyc": "^14",
    "oclif": "^1.16.1",
    "pkg": "^4.4.9",
    "ts-loader": "^7.0.5",
    "ts-node": "^8",
    "typescript": "^3.9.7"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/bcdevops/nrdk",
  "keywords": [
    "oclif"
  ],
  "license": "Apache",
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "nrdk",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "repositoryPrefix": "./<%- commandPath %>"
  },
  "repository": "https://github.com/bcdevops/nrdk",
  "scripts": {
    "build": "tsc -b",
    "postpack": "rm -f oclif.manifest.json",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "posttest": "eslint . --ext .ts --config .eslintrc",
    "prepack": "rm -rf lib && tsc -b && oclif-dev manifest && oclif-dev readme",
    "ncc": "ncc build bin/run -o dist --minify",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md",
    "oclif": "oclif",
    "link": "npm link nr-pipeline-ext && npm link @bcgov/pipeline-cli",
    "publish:latest": "npm --no-git-tag-version version prerelease && npm publish --tag latest",
    "publish:alpha": "npm --no-git-tag-version version prerelease && npm publish --tag alpha"
  },
  "types": "lib/index.d.ts",
  "bundleDependencies": [
    "@bcgov/pipeline-cli",
    "@oclif/plugin-help",
    "@types/rsync",
    "isomorphic-git",
    "@bcgov/nr-pipeline-ext",
    "rsync",
    "tar",
    "winston",
    "@oclif/command",
    "shelljs",
    "lodash.merge",
    "safe-buffer"
  ]
}
